<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen4"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/signIn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:text="MESSY"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_fb_email"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@drawable/top_edit_bg"
                android:hint="이메일"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/edit_fb_pw"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@drawable/bot_edit_bg"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnEmailLogin"
            style="@style/ButtonTrans"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="로그인"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="비밀번호를 잊으셨나요?"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="casual"
                android:text="아이디가 없으신가요?"
                android:textColor="#ffffff"
                android:textSize="15dp" />

        </RelativeLayout>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_sign_in_google"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:paddingLeft="6dp"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_sign_in_fb"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="14dp"
            android:paddingLeft="20dp"
            android:paddingTop="14dp" />
    </LinearLayout>

</RelativeLayout>